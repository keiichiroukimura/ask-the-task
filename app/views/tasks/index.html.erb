<h1>タスク一覧</h1>
<p id = "notice"><%= notice %></p>
<table class="table table-hover">
  <tr>
  <th><%= t('view.date') %></th>
  <th><%= t('view.priority') %></th>
  <th><%= t('view.title') %></th>
  <th><%= t('view.content') %></th>
  <th><%= t('view.deadline') %></th>
  <th><%= t('view.status') %></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <br>
    <tr>
    <td class="task-item__createdAt" ><%= task.created_at %></td>
    <td><%= task.priority %></td>
    <td class="task-item__title" >
      <%= task.title %>
    </td>
    <td class="task-item__content"><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status%></td>
    <td><%= link_to t('view.show'), task_path(task.id) %></td>
    <td><%= link_to t('view.edit'), edit_task_path(task.id) %></td>
    <td><%= link_to t('view.destroy'), task_path(task.id), method: :delete %></td>
    </tr>
    <% end %>
  
</table>
  <br>
  <%= link_to t('view.registration'), new_task_path %>