<div class = "task_show">
  <h1>タスク内容</h1>
  <p><%= 'ラベル名:' %><br>
  <% @task.favorite_labels.each do |a| %>
    <%= a.content%>
  <% end %></p>
  <p><%= t('view.title') %>:<br>
  <%= @task.title %></p>
  <p><%= t('view.content') %>:<br>
  <%= @task.content %></p>
  <p><%= t('view.deadline') %>:<br>
  <%= @task.deadline %></p>
  <p><%= t('view.priority') %>:<br>
  <%= @task.priority %></p>
  <p><%= t('view.status') %>:<br>
  <%= @task.status %></p>
  <%= link_to t('view.edit'), edit_task_path(@task) %>
  <%= link_to t('view.back'), tasks_path %>
</div>




