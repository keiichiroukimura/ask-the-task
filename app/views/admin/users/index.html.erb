<h1>ユーザー一覧</h1>
<p id = "notice"><%= notice %></p>
<%= link_to 'ユーザー登録', new_admin_user_path ,class: "btn btn-default "%>
<%= link_to 'ラベル作成', new_label_path ,class: "btn btn-default "%>
<table class = "table table-hover admin">
  <tr>
    <th><%= t("activerecord.models.user") %></th>
    <th><%= t("activerecord.models.email") %></th>
    <th><%= t("activerecord.models.admin") %></th>
    <th><%= t("activerecord.models.created_at") %></th>
    <th><%= t("activerecord.models.updated_at") %></th>
    <th><%= t("activerecord.models.tasks") %></th>
    <th><%= t("activerecord.models.edit") %></th>
    <th><%= t("activerecord.models.delete") %></th>

  </tr>
    <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, [:admin, user] %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>
    <td><%= user.created_at.to_s(:published_on) %></td>
    <td><%= user.updated_at.to_s(:published_on) %></td>
    <td><%= user.tasks.size %></td>
    <td><%= link_to '編集', edit_admin_user_path(user), class: "btn btn-primary mr-3" %></td>
    <td><%= link_to '削除', [:admin, user],method: :delete, data: { confirm: "ユーザー「#{user.name}」を削除します。よろしいですか？" }, class: "btn btn-danger" %>
  </tr>
    <% end %>
</table>